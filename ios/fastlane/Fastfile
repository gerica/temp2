  lane :closed_beta do
    build_app(workspace: "Runner.xcworkspace", scheme: "Runner")
    upload_to_testflight(
#       app_identifier: "co.radiolife",
      app_identifier: "#{DEVELOPER_APP_IDENTIFIER}",
      itc_provider: "#{DEVELOPER_PORTAL_TEAM_ID}",
    )
  end
end
